{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile_upload_full",
            "type": "shell",
            "command": "lualatex master; bibtex master; ./master.pdf; lualatex master; lualatex master; git add --all; git commit --all -m 'auto';git push --all --force",
            // --force
            //"command": "lualatex master; bibtex master; ./master.pdf; lualatex master; lualatex master",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        
        
        {
            "label": "start_up",
            "type": "shell",
            "command": "./master.pdf",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "clear_all_aux",
            "type": "shell",
            "command": "del *.aux; del *.log; del *.bbl; del *.log; del *.toc; del *.lof; del *.blg; del *.out;",
            "problemMatcher": []
        },
        {
            "label": "compile current chapter",
            "type": "shell",
            
            "command": "lualatex chapter; bibtex chapter; ./chapter.pdf; lualatex chapter; lualatex chapter;",
            "problemMatcher": []
        }

        {
            "label": "git-pull_build ",
            "type": "shell",
            //"command": "lualatex master; bibtex master; ./master.pdf; lualatex master; lualatex master;lualatex chapter; bibtex chapter; ./chapter.pdf",
            "command": "git pull -f; lualatex master; bibtex master; ./master.pdf; lualatex master; lualatex master;lualatex chapter; bibtex chapter; ./chapter.pdf",
            
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
    ]
}



